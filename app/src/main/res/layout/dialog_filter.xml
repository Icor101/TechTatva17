<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Filter Events"
            android:drawableLeft="@drawable/ic_filter_list__24dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:textColor="@color/white"
            android:layout_toLeftOf="@+id/apply_filter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/apply_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:background="@color/colorPrimary"
            android:text="Apply"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/clear_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/apply_filter"
            android:layout_toStartOf="@+id/apply_filter"
            android:background="@color/colorPrimary"
            android:text="CLEAR"
            android:textColor="#ffffff" />


    </RelativeLayout>



        <View
            android:id="@+id/filter_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_marginBottom="8dp"
            android:background="@android:drawable/divider_horizontal_bright" />

        <android.support.v7.widget.CardView
            android:id="@+id/filter_categories_card"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="16dp"
            android:layout_margin="12dp"
            android:clickable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Category:  "
                    android:drawableLeft="@drawable/ic_categories"

                    android:textColor="@color/white"
                    android:gravity="center|left"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/filter_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="All"
                    android:drawableRight="@drawable/ic_edit"/>




            </LinearLayout>



        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="16dp"
            android:layout_margin="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   Time Range:  "
                        android:drawableLeft="@drawable/ic_time"
                        android:textColor="@color/white"
                        android:paddingBottom="12dp"
                        android:gravity="center|left"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/filter_time_range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="12:00PM to 9:00PM"
                        android:paddingBottom="12dp"

                        />


                </LinearLayout>


                <com.appyvet.rangebar.RangeBar
                    android:id="@+id/filter_range_bar"
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    app:connectingLineColor="@color/colorPrimary"
                    app:pinColor="@color/colorPrimary"
                    app:pinMaxFont="10sp"
                    app:pinRadius="16dp"
                    app:selectorColor="@color/colorPrimary"
                    app:temporaryPins="false"
                    app:tickEnd="9"
                    app:tickInterval="1"
                    app:tickStart="0">


                </com.appyvet.rangebar.RangeBar>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="16dp"
            android:layout_margin="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="   Venue:  "
                        android:drawableLeft="@drawable/ic_venue"
                        android:textColor="@color/white"
                        android:paddingBottom="12dp"
                        android:gravity="center|left"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/filter_venue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingBottom="12dp"
                        android:text="All"

                        />



                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/filter_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fadeScrollbars="false"
                    android:isScrollContainer="false"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbars="vertical"
                    android:scrollbarThumbVertical="@color/colorPrimaryDark"
                    android:scrollbarSize="3dp">


                </android.support.v7.widget.RecyclerView>


            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
